# Configuration Base de Données MySQL
DB_HOST=127.0.0.1
DB_USER=votre_utilisateur_mysql
DB_PASSWORD=votre_mot_de_passe_mysql
DB_NAME=groupomania

# Sécurité - JWT Secret
# IMPORTANT : Remplacez par une chaîne aléatoire longue (minimum 32 caractères)
# Générez un secret avec : node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=changez_ceci_par_une_chaine_aleatoire_longue_minimum_32_caracteres

# URL du Frontend (pour CORS)
FRONTEND_URL=http://localhost:3000

# Port du serveur backend
PORT=3001
